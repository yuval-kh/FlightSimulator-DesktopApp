<Window x:Class="FlightSimulator.AnomalyGraphWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulator"
        mc:Ignorable="d"
        Title="AnomalyGraphWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="txt_loading" Text="Detecting Anomalies please wait..." VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="36" />
        <local:AnomalyUC x:Name="anomaly_uc" />
        <Button Width="100" Height="30" FontSize="18" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Content="Load DLL" Click="Button_Click"/>
    </Grid>
</Window>
